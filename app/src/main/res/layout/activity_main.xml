<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".pejantan.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Ternak information"
        android:textColor="#000000"
        android:textSize="40dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="App with SQLite Database"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="buttonPressed"
        android:textColor="#FFFFFF"
        android:background="@color/colorPrimary"
        android:outlineSpotShadowColor="@color/colorPrimaryDark"
        android:tag="viewButton"
        android:text="View all Pejantan" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="buttonPressed"
        android:background="@color/colorPrimary"
        android:tag="addButton"
        android:text="Tambah Pejantan" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="buttonPressed"
        android:background="@color/colorPrimary"
        android:tag="updateButton"
        android:textColor="#FFFFFF"
        android:text="Update Pejantan" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="buttonPressed"
        android:tag="deleteButton"
        android:background="@color/colorPrimary"
        android:text="Delete Pejantan" />



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="buttonPressed"
        android:shadowColor="@color/colorAccent"
        android:background="@color/colorAccent"
        android:tag="kesPJT"
        android:text="Kesehatan Pejantan" />
</android.widget.LinearLayout>